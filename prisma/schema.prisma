generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  CUSTOMER
  ADMIN
}

enum DeliveryMethod {
  SEVEN_ELEVEN
  POST_OFFICE
}

enum OrderStatus {
  PENDING_CONFIRMATION
  PENDING_PAYMENT
  PENDING_RECONCILIATION
  PAYMENT_CONFIRMED
  IN_PRODUCTION
  SHIPPED_OR_READY
  COMPLETED
  CANCELLED
}

enum PaymentMethod {
  BANK_TRANSFER
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          Role      @default(CUSTOMER)
  phone         String?
  accounts      Account[]
  sessions      Session[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  @@unique([identifier, token])
}

model Product {
  id          String                @id @default(cuid())
  name        String
  description String
  price       Decimal
  active      Boolean               @default(true)
  images      ProductImage[]
  fields      CustomizationField[]
  variants    OrderVariant[]
  createdAt   DateTime              @default(now())
  updatedAt   DateTime              @updatedAt
}

model ProductImage {
  id        String  @id @default(cuid())
  productId String
  url       String
  sortOrder Int     @default(0)
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  @@index([productId])
}

model CustomizationField {
  id        String                 @id @default(cuid())
  productId String
  fieldKey  String
  label     String
  type      String
  required  Boolean                @default(false)
  minChars  Int?
  maxChars  Int?
  options   CustomizationOption[]
  product   Product                @relation(fields: [productId], references: [id], onDelete: Cascade)
  @@unique([productId, fieldKey])
}

model CustomizationOption {
  id        String              @id @default(cuid())
  fieldId   String
  value     String
  label     String
  sortOrder Int                 @default(0)
  field     CustomizationField  @relation(fields: [fieldId], references: [id], onDelete: Cascade)
  @@unique([fieldId, value])
}

model ProductionDate {
  id        String   @id @default(cuid())
  date      DateTime @db.Date
  enabled   Boolean
  reason    String?
  createdBy String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@unique([date])
}

model Announcement {
  id        String    @id @default(cuid())
  title     String
  content   String
  pinned    Boolean   @default(false)
  active    Boolean   @default(true)
  startAt   DateTime?
  endAt     DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model MarketEvent {
  id        String    @id @default(cuid())
  title     String
  location  String?
  note      String?
  startAt   DateTime
  endAt     DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Order {
  id              String         @id @default(cuid())
  orderNo         String         @unique
  status          OrderStatus    @default(PENDING_CONFIRMATION)
  customerName    String
  email           String?
  phone           String?
  fulfillmentDate DateTime       @db.Date
  deliveryMethod  DeliveryMethod
  storeName       String?
  storeCode       String?
  storeAddress    String?
  postalRecipient String?
  postalAddress1  String?
  postalAddress2  String?
  postalCity      String?
  postalZip       String?
  notes           String?
  adminNotes      String?
  currency        String         @default("TWD")
  totalQty        Int
  totalAmount     Decimal
  variants        OrderVariant[]
  payment         PaymentRecord?
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  @@index([fulfillmentDate])
  @@index([status])
}

model OrderVariant {
  id            String  @id @default(cuid())
  orderId       String
  productId     String
  quantity      Int
  variantKey    String
  customization Json
  unitPrice     Decimal
  lineAmount    Decimal
  order         Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product       Product @relation(fields: [productId], references: [id])
  @@index([orderId])
  @@index([productId])
}

model PaymentRecord {
  id            String        @id @default(cuid())
  orderId       String        @unique
  method        PaymentMethod @default(BANK_TRANSFER)
  last5Digits   String?
  transferTime  DateTime?
  proofImageUrl String?
  reconciledAt  DateTime?
  reconciledBy  String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  order         Order         @relation(fields: [orderId], references: [id], onDelete: Cascade)
}

model AuditLog {
  id          String   @id @default(cuid())
  actorUserId String?
  entityType  String
  entityId    String
  action      String
  oldValue    Json?
  newValue    Json?
  ip          String?
  userAgent   String?
  createdAt   DateTime @default(now())
  @@index([entityType, entityId])
  @@index([createdAt])
}
